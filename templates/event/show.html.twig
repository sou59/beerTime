{# templates/show.html.twig #}
{% extends 'base.html.twig' %}

   
{% block body %}


    <div class="container pt-5">

        <h1>Evénements </h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">CP</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Country</th>
                    <th scope="col">Description</th>
                    <th scope="col">Capacité d'accueil</th>
                    <th scope="col">Début</th>
                    <th scope="col">Fin</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Owner</th>
                    <th scope="col">Poster</th>
                    <th scope="col">Rejoindre l'évènement</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ event.id }}</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.address }}</td>
                    <td>{{ event.zip }}</td>
                    <td>{{ event.city }}</td>
                    <td>{{ event.country }}</td>
                    <td>{{ event.description }}</td>
                    <td>{{ event.capacity }}</td>
                    <td>{{ event.start_at }}</td>
                    <td>{{ event.end_at }}</td>
                    <td>{{ event.price }}</td>
                    <td>{{ event.owner }}</td>
                    <td>{{ event.poster }}</td>
                    <td><a href="{{ path('event_join', { 'id':event.id }) }}"><button type="button" class="btn btn-success">Rejoindre l'évènement</button></a></td>
                </tr>
            </tbody>
        </table>


        <p><a href="{{ path('event_list') }}">Voir la liste des évènements</a></p>

        {% block content %}{% endblock %}
    </div>
{% endblock %}
   

    