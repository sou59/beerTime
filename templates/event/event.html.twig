{# templates/event.html.twig #}
{% extends 'base.html.twig' %}

   
{% block body %}

    <div class="container pt-3">
        <img class="imgtonneau" src="{{ asset('img/images.jpg') }}">
        <p class="bienvenue">Bienvenue aux amateurs de bières</p>
    </div>

    <div class="container pt-5">

        <h1>Liste des évènements</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Poster</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Country</th>
                    <th scope="col">Date</th>
                    <th scope="col">A venir/En cours/Passé</th>
                    <th scope="col">Voir l'évènement</th>
                </tr>
            </thead>
            <tbody>

                {% for event in events %}
                <tr>
                    <td>{{ event.id }}</td>
                    <td class="poster" style="background-image: url('{{ event.poster }}')"</td>
                    <td>{{ event.name }}</td>
                    <td>{{ event.city }}</td>
                    <td>{{ event.country }}</td>
                    <td>{{ event.start_at }}</td>
                    <td>
                       {% if event.start_at > date()  %}
                        <span class="event-status badge badge-success"> A venir</span>
                        {% elseif event.end_at < date()  %}
                         <span class="event-status badge badge-danger"> Passé</span>
                        {% else %} 
                        <span class="event-status badge badge-primary">    En cours </span>
                        {% endif %}
                    </td>

                    <td><a href="{{ path('event_show', { 'id':event.id }) }}">
                    <button type="button" class="btn btn-primary">Voir le détail</button></a></td>
                </tr>
                {# {{ dump(event) }} #}
                {% endfor %}
            </tbody>
        </table>


        <p><a href="{{ path('event_list') }}">Voir la liste des évènements</a></p>

        {% block content %}{% endblock %}
    </div>
{% endblock %}
   

    