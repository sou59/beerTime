{# templates/login.html.twig #}
{% extends 'base.html.twig' %}

   
{% block body %}

    {% if error %}
        <p>Erreur de connexion</p>

    {% endif %}

    <div class="container pt-5">

        <h1>Login</h1>
        {# action non obligatoire, ici sur la même page #}
        <form action="{{ path('user_login') }}" method="post">
            <div class="form-group">
              <label for="username">Nom d'utilisateur :</label>
              <input type="username" class="form-control" id="email" placeholder="Enter username" name="_username" value="{{ lastUsername }}">
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password" placeholder="Password" name="_password" >
            </div>
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </form>


        <div class="container pt-5">
            <p><a href="{{ path('event_list') }}">Voir la liste des évènements</a></p>
        </div>

        {% block content %}{% endblock %}
    </div>
{% endblock %}
   